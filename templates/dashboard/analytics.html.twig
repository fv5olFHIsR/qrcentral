{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}



{% block menus %}
    <li class="nav-item"> <a class="nav-link" href="{{ path('dashboard') }}">QUICK</a> </li>
    <li class="nav-item"> <a class="nav-link" href="{{ path('tracked_qr') }}">NEW TRACKED CODE</a> </li>
    <li class="nav-item"> <a class="nav-link active" href="{{ path('qr_analytics') }}">ANALYTICS</a> </li>

    <li class="nav-item"><a href="{{ path('logout') }}" class="btn btn-outline-light my-3 my-sm-0 ml-lg-3">Logout</a></li>

{% endblock %}

{% block body %}
    <div class="col-12 col-lg-12">
   

    <div class="card qr_tracked_card">
        <div class="card-body">
            <h2>Your QR Codes</h2>
            <div class="container">
                <div class="row">
                    <div class="col-sm">

                        {% if qrCodes is empty %}
                            You have not created any tracked codes yet :)<br/>
                            Click the <b>"Save"</b> button to create your first one.
                        {% endif %}
                        {% for db_qrcode in qrCodes %}
                            <div class="col-12 col-lg-12">
                                <div class="card features" style="margin-bottom:7px;">
                                    <div class="card-body">
                                        <div class="media">
                                            <span style="font-size:70px; margin-right:20px;"> Q </span>
                                            <div class="media-body">
                                                <h4 class="card-title">{{ db_qrcode.name }}</h4>
                                                <p class="card-text">{{ db_qrcode.image }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/js/qrcodegeneration.js') }}"></script>
{% endblock %}